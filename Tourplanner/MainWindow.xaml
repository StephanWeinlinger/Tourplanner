<Window x:Class="Tourplanner.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tourplanner.Client.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="300" MinWidth="300" FontSize="14">
	<DockPanel>
		
		<Menu DockPanel.Dock="Top" FontSize="14">
			<local:NavBar x:Name="NavBar" />
		</Menu>
		<Grid DockPanel.Dock="Top">
			<local:SearchBar x:Name="SearchBar" />
		</Grid>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="100" />
				<ColumnDefinition Width="5" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<DockPanel Grid.Column="0">
				<local:TourList x:Name="TourList" />
			</DockPanel>
			<GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" />
			<Grid Grid.Column="2">
				<Grid.RowDefinitions>
					<RowDefinition Height="*" />
					<RowDefinition Height="5" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>
				<DockPanel Grid.Row="0">
					<local:TourDetails x:Name="TourDetails" />
					<!--<Label Content="Title: Tour 1" DockPanel.Dock="Top" HorizontalAlignment="Center"/>
					<TabControl>
						<TabItem Header="Route">
							<ScrollViewer HorizontalScrollBarVisibility="Auto">
								<Grid>
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="Auto" />
										<ColumnDefinition Width="*" />
									</Grid.ColumnDefinitions>
									<Grid.RowDefinitions>
										<RowDefinition Height="Auto" />
										<RowDefinition Height="Auto" />
										<RowDefinition Height="Auto" />
										<RowDefinition Height="Auto" />
										<RowDefinition Height="Auto" />
										<RowDefinition Height="Auto" />
										<RowDefinition Height="Auto" />
										<RowDefinition Height="Auto" />
									</Grid.RowDefinitions>
									<Label Grid.Column="0" Grid.Row="0" Content="From:" />
									<Label Grid.Column="1" Grid.Row="0" Content="Vienna" />
									<Label Grid.Column="0" Grid.Row="1" Content="To:" />
									<Label Grid.Column="1" Grid.Row="1" Content="Munich" />
									<Label Grid.Column="0" Grid.Row="2" Content="Transport Type:" />
									<Label Grid.Column="1" Grid.Row="2" Content="Train" />
									<Label Grid.Column="0" Grid.Row="3" Content="Tour Distance:" />
									<Label Grid.Column="1" Grid.Row="3" Content="550 km" />
									<Label Grid.Column="0" Grid.Row="4" Content="Estimated Time:" />
									<Label Grid.Column="1" Grid.Row="4" Content="7 h" />
									<Label Grid.Column="0" Grid.Row="5" Content="Popularity:" />
									<Label Grid.Column="1" Grid.Row="5" Content="30 / 100" />
									<Label Grid.Column="0" Grid.Row="6" Content="Child Friendliness:" />
									<Label Grid.Column="1" Grid.Row="6" Content="98 / 100" />
									<Image Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="7" Source="/assets/map_placeholder.png" Width="500" />
								</Grid>
							</ScrollViewer>
						</TabItem>
						<TabItem Header="Description">
							<ScrollViewer VerticalScrollBarVisibility="Auto">
								<TextBlock TextWrapping="WrapWithOverflow" Text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et" />
							</ScrollViewer>
						</TabItem>
					</TabControl>-->
				</DockPanel>
				<GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" />
				<DockPanel Grid.Row="2">
					<local:TourLogs x:Name="TourLogs" />
				</DockPanel>
			</Grid>
		</Grid>
	</DockPanel>
</Window>
