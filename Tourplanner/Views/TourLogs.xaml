<Page x:Class="Tourplanner.Client.Views.TourLogs"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tourplanner.Client.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TourLogs">

    <Grid>
		<DockPanel Grid.Row="2">
			<Label Content="Logs" DockPanel.Dock="Top" HorizontalAlignment="Center" />
			<DataGrid AutoGenerateColumns="False">
				<DataGrid.Columns>
					<DataGridTextColumn Header="Date"/>
					<DataGridTextColumn Header="Total Time"/>
					<DataGridTextColumn Header="Difficulty"/>
					<DataGridTextColumn Header="Rating"/>
					<DataGridTextColumn Header="Comment" Width="*"/>
				</DataGrid.Columns>
			</DataGrid>
		</DockPanel>
	</Grid>
</Page>
